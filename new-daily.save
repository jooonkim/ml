#!/bin/bash

# Get today's date
TODAY=$(date +%Y-%m-%d)

echo "Creating daily ML post for $TODAY..."

# Create the folder
mkdir -p posts/daily/$TODAY

# Create the post with the date as the title
quarto create post "$TODAY" \
  --dir posts/daily/$TODAY

# Path to the newly generated file
POST_FILE="posts/daily/$TODAY/index.qmd"

# Insert correct YAML frontmatter (overwrite existing)
cat > $POST_FILE << EOF
---
title: "$TODAY"
date: $TODAY
categories: [daily]
---

EOF

echo "Done! Filecho "$POST_FILE"

